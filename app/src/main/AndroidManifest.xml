<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.oerntec.votenote"
    android:versionCode="131"
    android:versionName="1.3.1">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_zusammengeschoben"
        android:label="@string/app_name"
        android:theme="@style/CustomAppTheme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="de.oerntec.votenote.export_provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/my_paths" />
        </provider>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SubjectManagerStuff.SubjectManagementActivity"
            android:label="@string/title_activity_group_management"
            android:parentActivityName=".Preferences.PreferencesActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.oerntec.votenote.Preferences.PreferencesActivity" />
        </activity>
        <activity
            android:name=".Diagram.DiagramActivity"
            android:label="@string/title_activity_diagram"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.oerntec.votenote.MainActivity" />
        </activity>
        <activity
            android:name=".Preferences.PreferencesActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.oerntec.votenote.MainActivity" />
        </activity>
        <activity
            android:name=".AdmissionPercentageOverview.AdmissionPercentageOverviewActivity"
            android:label="Info"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.oerntec.votenote.MainActivity" />
        </activity>
        <activity
            android:name=".SubjectManagerStuff.SubjectCreation.SubjectOverview.SubjectCreationActivity"
            android:label="@string/title_activity_subject_creation"
            android:parentActivityName=".SubjectManagerStuff.SubjectManagementActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.oerntec.votenote.SubjectManagerStuff.SubjectManagementActivity" />
        </activity>
        <activity
            android:name=".SubjectManagerStuff.SubjectCreation.CreationFragment.AdmissionPercentageCreation.AdmissionPercentageCreationActivity"
            android:windowSoftInputMode="adjustNothing"></activity>
    </application>

</manifest>