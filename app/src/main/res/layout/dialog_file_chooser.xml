<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/dialog_file_chooser_new_directory_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dialog_file_chooser_file_name_edit"
        android:layout_alignLeft="@+id/dialog_file_chooser_breadcrumbs"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/dialog_file_chooser_breadcrumbs"
        android:text="@string/new_folder_button" />

    <ListView
        android:id="@+id/dialog_file_chooser_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/dialog_file_chooser_new_directory_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dialog_file_chooser_breadcrumbs" />

    <EditText
        android:id="@+id/dialog_file_chooser_file_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textVisiblePassword" />

    <TextView
        android:id="@+id/dialog_file_chooser_breadcrumbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:text="/storage/emulated/0"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>