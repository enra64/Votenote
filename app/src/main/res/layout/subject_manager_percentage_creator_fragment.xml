<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingLeft="10dp"
    android:paddingRight="16dp"
    android:paddingStart="10dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/header_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:clickable="false"
            android:text="@string/percentage_creator_header_general"
            android:textColor="@color/accent"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/percentage_creator_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/header_general"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textNoSuggestions"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:textSize="20sp" />

        <include
            android:id="@+id/percentage_creator_notification_enabled_layout"
            layout="@layout/settings_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/percentage_creator_name_edittext"
            android:layout_marginTop="8dp" />

        <include
            android:id="@+id/percentage_creator_notification_buttons_layout"
            layout="@layout/settings_dow_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/percentage_creator_notification_enabled_layout"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/header_percentages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/percentage_creator_notification_buttons_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:clickable="false"
            android:text="@string/percentage_creator_header_percentages"
            android:textColor="@color/accent"
            android:textSize="14sp"
            android:textStyle="bold" />

        <include
            android:id="@+id/percentage_creator_baseline_percentage_layout"
            layout="@layout/settings_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_percentages"
            android:layout_marginTop="8dp" />

        <include
            android:id="@+id/percentage_creator_bonus_enabled_layout"
            layout="@layout/settings_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/percentage_creator_baseline_percentage_layout"
            android:layout_marginTop="8dp" />

        <include
            android:id="@+id/percentage_creator_bonus_percentage_layout"
            layout="@layout/settings_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/percentage_creator_bonus_enabled_layout"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/header_estimations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/percentage_creator_bonus_percentage_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:clickable="false"
            android:text="@string/percentage_creator_header_estimations"
            android:textColor="@color/accent"
            android:textSize="14sp"
            android:textStyle="bold" />

        <include
            android:id="@+id/percentage_creator_estimated_lesson_count_layout"
            layout="@layout/settings_seekbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_below="@id/header_estimations"
            android:layout_marginTop="8dp" />

        <include
            android:id="@+id/percentage_creator_estimated_assignments_per_lesson_layout"
            layout="@layout/settings_seekbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_below="@id/percentage_creator_estimated_lesson_count_layout" />

        <Spinner
            android:id="@+id/percentage_creator_estimation_mode_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/percentage_creator_estimated_assignments_per_lesson_layout" />

    </RelativeLayout>
</ScrollView>