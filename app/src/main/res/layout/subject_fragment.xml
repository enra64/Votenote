<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_lesson_tabbed_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TabbedFragment">

        <!--
        This title strip will display the currently visible page title, as well as the page
        titles for adjacent pages.
        -->

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/fragment_lesson_tabbed_pager_title_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />
        <!--android:background="#33b5e5"-->
        <!-- android:textColor="#fff"-->


    </android.support.v4.view.ViewPager>


    <TextView
        android:id="@+id/no_admission_percentage_counters_warner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/keine_prozentz_hler_vorhanden_f_ge_in_den_einstellungen_welche_hinzu"
        android:visibility="visible" />
</RelativeLayout>

