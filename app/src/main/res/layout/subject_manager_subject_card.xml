<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="2dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPaddingBottom="-3dp"
    card_view:contentPaddingTop="-3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">


        <TextView
            android:id="@+id/subject_manager_subject_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:text="Modellierung"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/subject_manager_subject_card_needed_percentage"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#CCC" />

        <TextView
            android:id="@+id/subject_manager_subject_card_needed_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/subject_manager_subject_card_title"
            android:layout_alignStart="@+id/subject_manager_subject_card_title"
            android:layout_below="@+id/subject_manager_subject_card_title"
            android:layout_marginTop="4dp"
            android:text="70%"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/subject_manager_subject_card_presentation_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/subject_manager_subject_card_needed_percentage"
            android:layout_alignStart="@+id/subject_manager_subject_card_needed_percentage"
            android:layout_below="@+id/subject_manager_subject_card_needed_percentage"
            android:text="3 Vortragspunkte"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/subject_manager_subject_card_scheduled_lesson_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/subject_manager_subject_card_presentation_points"
            android:layout_alignStart="@+id/subject_manager_subject_card_presentation_points"
            android:layout_below="@+id/subject_manager_subject_card_presentation_points"
            android:text="13 Übungen"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/subject_manager_subject_card_assignments_per_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/subject_manager_subject_card_scheduled_lesson_count"
            android:text="4 Aufgaben pro Übung"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>
</android.support.v7.widget.CardView>