<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="2dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <TextView
            android:id="@+id/subject_manager_subject_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:text="Modellierung"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/subject_manager_subject_card_percentage_counter_count"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/accent" />

        <TextView
            android:id="@+id/subject_manager_subject_card_percentage_counter_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/subject_manager_subject_card_title"
            android:layout_alignStart="@+id/subject_manager_subject_card_title"
            android:layout_below="@+id/subject_manager_subject_card_title"
            android:layout_marginTop="4dp"
            android:text="70%"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/subject_manager_subject_card_counter_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/subject_manager_subject_card_percentage_counter_count"
            android:layout_alignStart="@+id/subject_manager_subject_card_percentage_counter_count"
            android:layout_below="@+id/subject_manager_subject_card_percentage_counter_count"
            android:text="3 Vortragspunkte"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText" />

    </RelativeLayout>
</android.support.v7.widget.CardView>