<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:paddingTop="4dp"
    tools:context="de.oerntec.votenote.DiagramActivity">
    <com.jjoe64.graphview.GraphView
        android:id="@+id/diagramactivity_graph"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/diagramactivity_text_info" />

    <TextView
        android:id="@+id/diagramactivity_text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="Votierungsdiagramm"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <ListView
        android:id="@+id/diagramactivity_listview_whichuebungs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diagramactivity_graph"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
