<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/subject_manager_dialog_groupsettings_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView18"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/subject_manager_admission_counter_list"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/textView20" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/subject_manager_admission_percentage_counter_list"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView19" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Name der Übung"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subject_manager_dialog_groupsettings_edit_name"
        android:layout_marginTop="10dp"
        android:text="Zulassung Mindestprozente"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subject_manager_admission_percentage_counter_list"
        android:layout_marginTop="10dp"
        android:text="Punktezähler"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/subject_manager_admission_percentage_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subject_manager_admission_percentage_counter_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_button_add"
        android:tint="#000" />

    <ImageView
        android:id="@+id/subject_manager_admission_counter_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_button_add"
        android:tint="#000" />

</RelativeLayout>