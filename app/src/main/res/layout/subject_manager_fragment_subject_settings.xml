<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/subject_manager_dialog_groupsettings_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView18"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/subject_manager_admission_counter_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject_manager_admission_percentage_counter_list" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/subject_manager_admission_percentage_counter_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subject_manager_dialog_groupsettings_edit_name" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Name der Ãœbung"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>