<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/subject_fragment_subject_card_titlelayout"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:elevation="10dp">

            <TextView
                android:id="@+id/subject_fragment_subject_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:paddingLeft="7dp"
                android:paddingTop="7dp"
                android:text="Modellierung"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFF"
                android:textSize="30sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/accent" />

            <TextView
                android:id="@+id/subject_fragment_subject_card_title_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:elevation="1dp"
                android:paddingTop="7dp"
                android:text="20%"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFF"
                android:textSize="30sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/subject_fragment_subject_card_prespoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/subject_fragment_subject_card_titlelayout"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:text="3 von 3 Vortragspunkten"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/subject_fragment_subject_card_vote_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/subject_fragment_subject_card_titlelayout"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:text="88%"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="gone" />

        <TextView
            android:id="@+id/subject_fragment_subject_card_average_assignments_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/subject_fragment_subject_card_prespoints"
            android:layout_marginBottom="7dp"
            android:paddingLeft="7dp"
            android:text="Noch durchschnittlich 0,40 Aufgaben pro Ãœbung"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>
</android.support.v7.widget.CardView>