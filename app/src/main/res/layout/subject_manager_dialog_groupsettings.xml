<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/subject_manager_dialog_groupsettings_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textNoSuggestions" />

    <TextView
        android:id="@+id/subject_manager_dialog_groupsettings_min_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subject_manager_dialog_groupsettings_edit_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/subjectmanager_needed_work"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/subject_manager_dialog_groupsettings_seek_min_votierungs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject_manager_dialog_groupsettings_min_votes"
        android:layout_toLeftOf="@+id/subject_manager_dialog_groupsettings_text_min_votierungs"
        android:layout_toStartOf="@+id/subject_manager_dialog_groupsettings_text_min_votierungs" />

    <TextView
        android:id="@+id/subject_manager_dialog_groupsettings_text_min_votierungs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/subject_manager_dialog_groupsettings_seek_min_votierungs"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="50%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/subject_manager_dialog_groupsettings_prespoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subject_manager_dialog_groupsettings_seek_min_votierungs"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/subjectmanager_needed_prespoints"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/subject_manager_dialog_groupsettings_seek_prespoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/subject_manager_dialog_groupsettings_seek_min_votierungs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/subject_manager_dialog_groupsettings_seek_min_votierungs"
        android:layout_below="@+id/subject_manager_dialog_groupsettings_prespoints"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/subject_manager_dialog_groupsettings_text_prespoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/subject_manager_dialog_groupsettings_seek_prespoints"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/subject_manager_dialog_groupsettings_estimated_assignments_per_uebung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subject_manager_dialog_groupsettings_text_prespoints"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/subjectmanager_assignments_per_lesson"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/subject_manager_dialog_groupsettings_text_assignments_per_uebung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/subject_manager_dialog_groupsettings_seek_assignments_per_uebung"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="5"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <SeekBar
        android:id="@+id/subject_manager_dialog_groupsettings_seek_assignments_per_uebung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/subject_manager_dialog_groupsettings_seek_prespoints"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/subject_manager_dialog_groupsettings_seek_prespoints"
        android:layout_below="@+id/subject_manager_dialog_groupsettings_estimated_assignments_per_uebung" />

    <TextView
        android:id="@+id/subject_manager_dialog_groupsettings_est_ueb_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subject_manager_dialog_groupsettings_estimated_assignments_per_uebung"
        android:layout_alignStart="@+id/subject_manager_dialog_groupsettings_estimated_assignments_per_uebung"
        android:layout_below="@+id/subject_manager_dialog_groupsettings_seek_assignments_per_uebung"
        android:text="@string/subjectmanager_lesson_count"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/subject_manager_dialog_groupsettings_seek_estimated_uebung_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/subject_manager_dialog_groupsettings_seek_assignments_per_uebung"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/subject_manager_dialog_groupsettings_seek_assignments_per_uebung"
        android:layout_below="@+id/subject_manager_dialog_groupsettings_est_ueb_count" />

    <TextView
        android:id="@+id/subject_manager_dialog_groupsettings_text_estimated_uebung_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/subject_manager_dialog_groupsettings_seek_estimated_uebung_count"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="12"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

</RelativeLayout>